# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# ===== CORE APPLICATION SETTINGS =====
NODE_ENV=development
PORT=5000

# ===== DATABASE CONFIGURATION =====
# PostgreSQL connection string (optional - uses memory storage if not provided)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/evalmatch

# ===== AUTHENTICATION BYPASS (DEVELOPMENT ONLY) =====
# WARNING: Never set this to true in production!
# Only use for local development and testing
AUTH_BYPASS_MODE=false

# ===== FIREBASE AUTHENTICATION =====
# Required for production - get these from Firebase Console > Project Settings
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_KEY=your-firebase-service-account-json-key-here

# Firebase Client Configuration (for web app)
VITE_FIREBASE_API_KEY=AIzaSyC_your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456789012

# ===== AI PROVIDER API KEYS =====
# At least one is required for AI-powered features
# Get these from respective provider dashboards

# Groq (Recommended - fastest inference)
GROQ_API_KEY=gsk_your_groq_api_key_here

# OpenAI (Reliable fallback)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic Claude (High quality)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# ===== SECURITY CONFIGURATION =====
# Generate a secure random string of at least 32 characters
# You can use: openssl rand -base64 32
SESSION_SECRET=generate-with-openssl-rand-base64-32

# Admin API token for administrative endpoints (optional)
# Generate with: openssl rand -hex 32
ADMIN_API_TOKEN=generate-with-openssl-rand-hex-32

# Comma-separated list of allowed CORS origins for production
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===== DEPLOYMENT CONFIGURATION =====
# These are typically set automatically by hosting providers
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
# VERCEL_URL=your-app.vercel.app
# URL=https://your-app.netlify.app

# ===== PERFORMANCE TUNING =====
# Maximum concurrent embedding operations (1-10)
MAX_CONCURRENT_EMBEDDINGS=3

# Maximum text length for processing (bytes)
MAX_TEXT_LENGTH=50000

# ===== LOGGING =====
# Logging level: error, warn, info, debug
LOG_LEVEL=info

# ===== FEATURE FLAGS =====
# Serve static files directly from Express (true/false)
SERVE_STATIC=true

# Enable file uploads (true/false)  
ENABLE_UPLOADS=true